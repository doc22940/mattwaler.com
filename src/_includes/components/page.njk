<!DOCTYPE html>
<html
  lang="en"
  :class="{ 'mode-dark': darkMode }"
  x-data="{ darkMode: null }"
  x-show="darkMode !== null"
  x-init="() => {
    const scheme = localStorage.getItem(`colorScheme`)
    if (scheme == `light`) return darkMode = false
    if (scheme == `dark`) return darkMode = true
    return darkMode = window.matchMedia('(prefers-color-scheme: dark)').matches
  }"
>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Matt Waler | {{ title }}</title>
    <meta name="description" content="{{ description }}">
    {% include 'components/favicons.njk' %}
    <script defer src="/assets/main.bundle.js"></script>
    <link rel="stylesheet" href="/assets/main.bundle.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    {% block head %}{% endblock %}
  </head>
  <body class="flex flex-col min-h-100vh dark:bg-gray-900 dark:text-white">
    {% include 'components/header.njk' %}
    <div data-contact></div>
    <main class="flex-grow">
      {% block body %}{% endblock %}
    </main>
    {% include 'components/footer.njk' %}
  </body>
</html>
