.markdown {

  & > * + * {
    @apply mt-4
  }


  p + p { @apply mt-6 }
  p {
    @apply text-gray-800 text-lg leading-relaxed;
  }

  ul {
    @apply list-disc ml-6;
  }

  li + li {
    @apply mt-2
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-bold leading-tight;

    * + & {
      @apply mt-12;
    }
  }
  h1 { @apply text-5xl; }
  h2 { @apply text-4xl; }
  h3 { @apply text-3xl; }
  h4 { @apply text-2xl; }
  h5 { @apply text-xl; }
  h6 { @apply text-lg; }

}
